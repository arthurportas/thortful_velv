<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <property name="LOG_HOME" value="./logs"/>
    <property name="OUT_PATTERN"
              value="thortful-%X{system:-api}-%X{communicationType:-server} {{ env }} %X{network:-default} [%d{yyyy-MM-dd'T'HH:mm:ss,SSS'Z'}] %X{web-context-CF-RAY:--} %-5p [%t] [%c] %msg%n%throwable"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${OUT_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
